<h1>Friends</h1>
<% @friendships.each do |friendship| %>
  <div class="row">
    <div class="col-sm-5 col-sm-offset-2">
      <h3 class="display-4"><%= friendship.friend.first_name%></h3>
    </div>
    <div class="col-sm-5">
      <%= button_to "Remove", friendship_path(friendship.id), method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
