<h1>Users</h1>
<% @users.each do |user| %>
  <div class="row">
    <div class="col-sm-5 col-sm-offset-2">
      <h3 class="display-4"><%= user.first_name%></h3>
    </div>
    <div class="col-sm-5">
      <%= link_to "Add a Friend", friendships_path(:friend_id => user ), :method => :post, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
