<h1>Users</h1>
<% @users.each do |user| %>
  <div class="row">
    <div class="col-sm-5 col-sm-offset-2">
      <h3 class="display-4"><%= user.first_name%></h3>
    </div>
    <div class="col-sm-5">
      <% if current_user.friends.include?(user) %>
        <%= button_tag "Friend Request Sent", disabled: true, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to "Send Friend Request", "#", class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
<% end %>
